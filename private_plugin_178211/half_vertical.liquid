<style>
  .movie-container {
    width: 100%;
    height: 100%;
  }
  .main-image {
    object-fit:cover;
    object-position:center;
    height: 100%;
  }
  .qr-code {
    position: absolute; 
    bottom: 5px; 
    right: 5px; 
    z-index: 100;
    background-color: white;
    padding: 5px;
    border: solid 1px black;
    box-sizing: content-box;
  }
</style>

<div class="layout m--0 p--0">
  {% if error_text %}
  <div>{{error_text}}</div>
  {% else %}
  {% if movie %}
  <div class="layout movie-container">
    <img class="image main-image image-dither" src="https://raw.githubusercontent.com/excusemi/trmnl-movie-guesser-plugin/refs/heads/main/movie_dataset/{{ image_path }}" alt="Movie Still" class="movie-still">

    {{qr_content | qr_code: 3, 'm'}}


  </div>
  {% else %}
  <div>{{t_no_match}}</div>
  {% endif%}
  {% endif %}
</div>
<div class="title_bar p--4 mb--2">
  <span class="title">{{t_guess}}{% if long_title and movie %} {{t_from_decade}} {{decade}} {{t_decade_suffix}}{% endif %}?</span>
</div>
